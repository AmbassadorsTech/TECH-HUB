// A PROGRAM THAT CAN CALCULATE THE AREA OF A trapezium IN JAVA CONSOLE

import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);

    System.out.print("Enter the length of the top base of the trapezium: ");
    double topBase = scanner.nextDouble();

    System.out.print("Enter the length of the bottom base of the trapezium: ");
    double bottomBase = scanner.nextDouble();

    System.out.print("Enter the height of the trapezium: ");
    double height = scanner.nextDouble();

    double area = ((topBase + bottomBase) * height) / 2;
    System.out.println("The area of the trapezium is: " + area);
  }
}
